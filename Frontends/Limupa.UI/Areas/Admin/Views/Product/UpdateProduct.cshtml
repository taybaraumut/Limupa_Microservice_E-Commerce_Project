@model UpdateProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/_AdminLayout/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Product Add</h4>
                <h6>Create new product</h6>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-3 col-sm-6 col-12">

                            <input type="hidden" asp-for="ProductID">
                            <input type="hidden" asp-for="ProductUrlSeo">

                            <div class="form-group">
                                <label>Ürün Adı</label>                              
                                <input type="text" asp-for="ProductName">
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Ürün Kategorisi</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.CategoryValues, new { @class = "select" })
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Ürün Görseli</label>
                                <input type="file" asp-for="Photo">
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label>Ürün Fiyatı</label>
                                <input type="text" asp-for="ProductPrice">
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Ürün Açıklaması</label>
                                <textarea class="form-control" asp-for="ProductDescription"></textarea>
                            </div>
                        </div>


                        <input type="hidden" asp-for="SavedUrl" value="Value" />
                        <input type="hidden" asp-for="SavedFileName" />
                        <input type="hidden" asp-for="ProductImageUrl" value="Value" />

                        @* <div class="col-lg-12">
                        <div class="form-group">
                        <label> Product Image</label>
                        <div class="image-upload">
                        <input type="file">
                        <div class="image-uploads">
                        <img src="assets/img/icons/upload.svg" alt="img">
                        <h4>Drag and drop a file to upload</h4>
                        </div>
                        </div>
                        </div>
                        </div> *@
                        <div class="col-lg-12">
                            <input type="submit" class="btn btn-submit me-2" value="Kaydet" />
                            <input type="reset" class="btn btn-cancel me-2" value="Vazgeç" />
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

