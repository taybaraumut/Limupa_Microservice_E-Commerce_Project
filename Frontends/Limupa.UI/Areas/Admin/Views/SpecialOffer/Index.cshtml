@model List<ResultSpecialOfferDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Slider Listesi</h4>
                <h6>Slider İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz</h6>
            </div>
            <div class="page-btn">
                <a asp-area="Admin" asp-controller="SpecialOffer" asp-action="CreateSpecialOffer" class="btn btn-added">
                    <img src="~/inventory-management-admin-dashboard-template-main/assets/img/icons/plus.svg" class="me-1" alt="img">Öne Çıkan Ekle
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-7 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            <label class="checkboxs">
                                                <input type="checkbox" id="select-all">
                                                <span class="checkmarks"></span>
                                            </label>
                                        </th>
                                        <th>Öne Çıkan Başlık</th>
                                        <th>Öne Çıkan ID</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <label class="checkboxs">
                                                    <input type="checkbox">
                                                    <span class="checkmarks"></span>
                                                </label>
                                            </td>
                                            <td class="productimgname">
                                                <a href="javascript:void(0);" class="product-img">
                                                    <img src="~/inventory-management-admin-dashboard-template-main/assets/img/product/noimage.png" alt="product">
                                                </a>
                                                <a href="javascript:void(0);">@item.SpecialOfferImageUrl</a>
                                            </td>
                                            <td>@item.SpecialOfferID</td>
                                            <td>
                                                <a class="me-3" asp-area="Admin" asp-controller="SpecialOffer" asp-action="UpdateSpecialOffer" asp-route-id="@item.SpecialOfferID">
                                                    <img src="~/inventory-management-admin-dashboard-template-main/assets/img/icons/edit.svg" alt="img">
                                                </a>
                                                <a class="me-3 confirm-text" asp-area="Admin" asp-controller="SpecialOffer" asp-action="DeleteSpecialOffer" asp-route-id="@item.SpecialOfferID">
                                                    <img src="~/inventory-management-admin-dashboard-template-main/assets/img/icons/delete.svg" alt="img">
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="slider-product-details">
                            <div class="owl-carousel owl-theme product-slide">

                                @foreach (var item in Model)
                                {
                                    count++;

                                    <div class="slider-product">
                                        <img src="~/Limupa/@item.SpecialOfferImageUrl" alt="img" style="width:780px!important;">
                                        <h6>Öne Çıkan Teklif Görseli</h6>
                                        <h6>Öne Çıkan Numara : @count</h6>
                                    </div>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

