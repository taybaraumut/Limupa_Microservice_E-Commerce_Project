@model GetByIdProductImageDto

@{
    ViewData["Title"] = "UpdateProductImage";
    Layout = "~/Areas/Admin/Views/_AdminLayout/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="page-header">
            <div class="page-title">
                <h4>Product Add</h4>
                <h6>Create new product</h6>
            </div>
        </div>


        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row">

                        <input type="hidden" asp-for="ProductImageID">
                        <input type="hidden" asp-for="ProductID">

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label> Product Image</label>
                                <div class="image-upload">
                                    <input multiple type="file" asp-for="BigPhoto">
                                    <div class="image-uploads">
                                        <img src="~/inventory-management-admin-dashboard-template-main/assets/img/icons/upload.svg" alt="img">
                                        <h4>Drag and drop a file to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label> Product Image</label>
                                <div class="image-upload">
                                    <input multiple type="file" asp-for="SmallPhoto">
                                    <div class="image-uploads">
                                        <img src="~/inventory-management-admin-dashboard-template-main/assets/img/icons/upload.svg" alt="img">
                                        <h4>Drag and drop a file to upload</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @for (int i = 0; i < Model.BigSavedFileName.Count; i++)
                        {
                            <input type="hidden" name="BigSavedFileName" value="@Model.BigSavedFileName[i]" />
                            <br />
                        }
                        @for (int i = 0; i < Model.SmallSavedFileName.Count; i++)
                        {
                            <input type="hidden" name="SmallSavedFileName" value="@Model.SmallSavedFileName[i]" />
                            <br />
                        }
  
                        
                        <input type="hidden" asp-for="BigSavedUrl" value="Value" />
                        <input type="hidden" asp-for="SmallSavedUrl" value="Value" />
                        <input type="hidden" asp-for="ProductBigImageUrl" value="string" />
                        <input type="hidden" asp-for="ProductSmallImageUrl" value="string" />




