@model List<ResultProductByHomeAndEntertainmentDeviceCategoryDto>

<section class="product-area li-laptop-product li-tv-audio-product pb-45">
    <div class="container">
        <div class="row">
            <!-- Begin Li's Section Area -->
            <div class="col-lg-12">
                <div class="li-section-title">
                    <h2>
                        <span>Ev Ve Eğlence Cihazları</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="product-active owl-carousel">

                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12">
                                <!-- single-product-wrap start -->
                                <div class="single-product-wrap">
                                    <div class="product-image">
                                        <a href="single-product.html">
                                            <img src="@item.ProductImageUrl" alt="Li's Product Image">
                                        </a>
                                    </div>
                                    <div class="product_desc">
                                        <div class="product_desc_info">
                                            <div class="product-review">
                                                <h5 class="manufacturer">
                                                    <a href="product-details.html">@item.ProductPrice</a>
                                                </h5>
                                                <div class="rating-box">
                                                    <ul class="rating">
                                                        <li><i class="fa fa-star-o"></i></li>
                                                        <li><i class="fa fa-star-o"></i></li>
                                                        <li><i class="fa fa-star-o"></i></li>
                                                        <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                        <li class="no-star"><i class="fa fa-star-o"></i></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <h4><a class="product_name" asp-controller="ProductDetail" asp-action="Index" asp-route-id="@item.ProductUrlSeo">@item.ProductName</a></h4>
                                            <div class="price-box">
                                                <span class="new-price">@item.ProductPrice ₺</span>
                                            </div>
                                        </div>
                                        @if (TempData["id"] != "")
                                        {
                                            <div class="add-actions">
                                                <ul class="add-actions-link">
                                                    <li class="add-cart active"><a href="/ShoppingCart/AddBasketItem/@item.ProductUrlSeo">Sepet Ekle</a></li>
                                                    <li><a class="links-details" href="single-product.html"><i class="fa fa-heart-o"></i></a></li>
                                                    <li><a class="quick-view" data-toggle="modal" data-target="#exampleModalCenter" href="#"><i class="fa fa-eye"></i></a></li>
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <!-- single-product-wrap end -->
                            </div>
                        }

                    </div>
                </div>
            </div>
            <!-- Li's Section Area End Here -->
        </div>
    </div>
</section>